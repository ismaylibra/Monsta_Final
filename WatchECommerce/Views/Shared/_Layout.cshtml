                        </div>
                    </div>
                    <div class="col-lg-5 col-md-7 col-6">
                        <div class="middel_right">
                            <div class="search_btn">
                                <a href="#">@Html.Raw(@layoutService.GetSettings().FirstOrDefault(p=>p.Key.Trim().ToLower()=="searchicon")?.Value)</a>
                                <div class="dropdown_search">
                                    <form action="#">
                                        <input placeholder="Search product..." type="text">
                                        <button type="submit">@Html.Raw(@layoutService.GetSettings().FirstOrDefault(p=>p.Key.Trim().ToLower()=="searchicon")?.Value)</button>
                                    </form>
                                </div>
                            </div>
                            <div class="wishlist_btn">
                                <a asp-controller="wishlist" asp-action="index"><i class="ion-heart"></i></a>
                            </div>
                            <div class="cart_link">
                                <a href="#"><i class="ion-android-cart"></i><span class="cart_text_quantity"> $@(layoutService.GetBasket() != null ? layoutService.GetBasket().TotalPrice : (decimal)default)</span> <i class="fa fa-angle-down"></i></a>
                                <span class="cart_quantity">@(layoutService.GetBasket() != null ? layoutService.GetBasket().BasketItemViewModels.Count.ToString() : "0")</span>
                                <!--mini cart-->
                                <div class="mini_cart">
                                    <div class="cart_close">
                                        <div class="cart_text">
                                            <h3>cart</h3>
                                        </div>
                                        <div class="mini_cart_close">
                                            <a href="javascript:void(0)"><i class="ion-android-close"></i></a>
                                        </div>
                                    </div>
                                    @if (layoutService.GetBasket() is not null)
                                    {

                                        foreach (BasketItemViewModel product in layoutService.GetBasket().BasketItemViewModels)
                                        {
                                            <div class="cart_item">
                                                <div class="cart_img">
                                                    <a href="#"><img src="~/assets/img/product/@product.Product.MainImageUrl" alt=""></a>
                                                </div>
                                                <div class="cart_info">
                                                    <a asp-controller="product" asp-action="details" asp-route-id="@product.Product.Id" >@product.Product.Brand.Name</a>

                                                    <span class="quantity">Qty:@product.Quantity</span>
                                                    @{
                                                        var productPrice = (decimal)default;
                                                        if(product.Product.DiscountPrice>0)
                                                        {
                                                            productPrice= (decimal)(product.Product.Price - product.Product.DiscountPrice);
                                                        }
                                                        else{
                                                            productPrice = product.Product.Price;
                                                        }
                                                    }
                                                    <span class="price_cart">$@productPrice</span>

                                                </div>
                                                <div class="cart_remove">
                                                    <a href="#"><i class="ion-android-close"></i></a>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {

                                        <div class="alert alert-danger text-center" role="alert">
                                           There is no product in basket <br><br>
                                           <a asp-controller="product" asp-action="index"><i class="fa-solid fa-cart-shopping"></i>
                                              Let's start shopping    
                                           </a>
                                        </div>
                                    }


                                    <div class="cart_total">
                                        <span>Subtotal:</span>
                                        <span>@(layoutService.GetBasket() != null ? layoutService.GetBasket().TotalPrice : (decimal)default ) $</span>
                                    </div>
                                    <div class="mini_cart_footer">
                                        <div class="cart_button view_cart">
                                            <a href="cart.html">View cart</a>
                                        </div>
                                        <div class="cart_button checkout">
                                            <a class="active" href="checkout.html">Checkout</a>
                                        </div>

                                    </div>

                                </div>
                                <!--mini cart end-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
