@model List<BlogCategory>
<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <h3>blog</h3>
                    <ul>
                        <li><a asp-controller="home" asp-action="index">home</a></li>
                        <li>></li>
                        <li>blog </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!--blog body area start-->
<div class="blog_area blog_none">
    <div class="container">
        <!--blog grid area start-->
        <div class="blog_grid_area">
            @foreach (var category in Model)
            {
                @foreach (var blog in category.Blogs)
                {
                    <div class="blog_grid">
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="blog_thumb">
                                    <a asp-controller="blog" asp-action="details" asp-route-id="@blog.Id"><img src="~/assets/img/blog/@blog.ImageUrl" alt=""></a>
                                </div>

                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="blog_content">
                                    <h3 class="post_title"><a asp-controller="blog" asp-action="details" asp-route-id="@blog.Id">@blog.Title</a></h3>
                                    <div class="post_meta">
                                        <span><i class="ion-person"></i> Posted by </span>
                                        <span>@blog.Author</span>
                                        <span>|</span>
                                        <span><i class="fa fa-calendar" aria-hidden="true"></i>  Posted on  @blog.PublishTime.ToString("dd MMMM yyyy")	</span>

                                    </div>
                                    @{
                                        string description = (blog.SpecifiedContent.Length < 140) ? blog.SpecifiedContent : blog.SpecifiedContent.Substring(0, 140) + "...";
                                    }
                                    <p class="post_desc">@description</p>
                                    <a class="read_more" asp-controller="blog" asp-action="details" asp-route-id="@blog.Id">read more</a>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
           

         

        </div>
        <!--blog grid area start-->
    </div>
</div>
<!--blog section area end-->