@model List<Color>

<div class="container">
    <div class="row">
        <div class="col-lg-10 grid-margin stretch-card ">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-inline-block">Colors</h4>
                    <a asp-controller="color" asp-action="create" class="btn btn-success text-end"><i class="fa-solid fa-circle-plus"></i></a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.Name</td>


                                        <td>

                                            <form asp-action="delete" method="post" class="form-sample" asp-route-id="@item.Id">
                                                <a class="btn btn-success" asp-action="update" asp-route-id="@item.Id"><i class="fa-regular fa-pen-to-square"></i></a>
                                                <button type="submit" class="btn btn-danger"><i class="fa-regular fa-trash-can"></i></button>
                                            </form>
                                        </td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


