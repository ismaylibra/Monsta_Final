@model ContactMessageReadViewModel


<li class="dropdown notifications-menu">
    <a href="#" class="waves-effect waves-light dropdown-toggle" data-bs-toggle="dropdown" title="Notifications">
        <i data-feather="bell"></i>
    </a>
    <ul class="dropdown-menu animated bounceIn">

        <li class="header">
            <div class="p-20">
                <div class="flexbox">
                    <div>
                        <h4 class="mb-0 mt-0">Notifications</h4>
                    </div>
                    <div>
                        <a href="#" class="text-danger">Clear All</a>
                    </div>
                </div>
            </div>
        </li>

        <li>
            <ul class="menu sm-scrol">
                @foreach (var item in Model.ContactMessages)
                {

                    <li>
                        <a asp-controller="contactmessage" asp-action="read" asp-route-id="@item.Id">
                        <div class="item-thumbnail">
                        </div>
                        <div class="item-content flex-grow">
                            <div class="item-thumbnail d-inline-block">
                                <img src="~/assets/img/user/@item.ProfileImage" alt="image" class="rounded-circle" style="width:40px; height:40px;" >
                            </div>
                            <h6 class="ellipsis font-weight-normal d-inline-block">
                                @item.Name
                            </h6>
                            <p class="font-weight-light small-text text-muted mb-0">
                                @item.Message
                            </p>
                        </div>
                        </a>
                    </li>

                }

            </ul>
        </li>
        <li class="footer">
            <a href="#">View all</a>
        </li>
    </ul>
</li>