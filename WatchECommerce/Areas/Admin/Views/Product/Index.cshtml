@{
	List<Product> products  = Model;
}
<!-- Main content -->
<section class="content">

	<div class="row fx-element-overlay">
		@foreach (var product in products)
		{
			<div class="col-12 col-lg-6 col-xl-4">
				<div class="box">
					<div class="fx-card-item">
						@foreach (var item in product?.ProductImages.Take(1))
						{
						<div class="fx-card-avatar fx-overlay-1">
							<img src="~/assets/img/product/@item.Name" alt="user" class="bbsr-0 bber-0">
							<div class="fx-overlay scrl-up">
								<ul class="fx-info">

										<form asp-controller="product" asp-action="delete" method="post" class="form-sample" asp-route-id="@product.Id">
											<li><a class="btn btn-outline image-popup-vertical-fit" asp-controller="product" asp-action="update" asp-route-id="@product.Id"><i class="fa-solid fa-pen-to-square"></i></a></li>
										<li><button type="submit"  ><i class="fa-solid fa-trash-can"></i></button></li>
										<li><a class="btn btn-outline " asp-action="details" asp-route-id="@product.Id"><i class="fa-solid fa-circle-info"></i></a></li>
										</form>
									
								</ul>
							</div>
						</div>	
						}
						
						<div class="fx-card-content text-start">
							<div class="product-text">
								<h2 class="pro-price text-blue">$ @product.Price</h2>
								<h4 class="box-title mb-0">@product.Name</h4>
								@{
									string description = (product.ShortDescription.Length < 20) ? product.ShortDescription : product.ShortDescription.Substring(0, 20) + "...";
								}
								<small class="text-muted db">@description</small>
							</div>
						</div>
					</div>
				</div>
				<!-- /.box -->
			</div>
		}
	
		

	</div>

</section>
<!-- /.content -->