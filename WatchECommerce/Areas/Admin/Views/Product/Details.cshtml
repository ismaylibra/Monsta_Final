@model Product;
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<div class="container-full">
		<!-- Content Header (Page header) -->
		<div class="content-header">
			<div class="d-flex align-items-center">
				<div class="me-auto">
					<h3 class="page-title">Details</h3>
					<div class="d-inline-block align-items-center">
						<nav>
							<ol class="breadcrumb">
								<li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"></i></a></li>
								<li class="breadcrumb-item" aria-current="page">Product</li>
								<li class="breadcrumb-item active" aria-current="page">Details</li>
							</ol>
						</nav>
					</div>
				</div>

			</div>
		</div>

		<!-- Main content -->
		<section class="content">

			<div class="row">
				<div class="col-lg-12">
					<div class="box">
						<div class="box-body">
							<div class="row">
								<div class="col-md-4 col-sm-6">
									<div class="box box-body b-1 text-center no-shadow">

										@foreach (var item in Model.ProductImages.Take(1))
										{
											<img src="~/assets/img/product/@item.Name" id="product-image" class="img-fluid" alt="" />
										}
										
									</div>
									<div class="pro-photos">
										@foreach (var item in Model.ProductImages)
										{
											<div class="photos-item item-active">
												<img src="~/assets/img/product/@item.Name" alt="">
											</div>
										}
										
										
									</div>
									<div class="clear"></div>
								</div>
								<div class="col-md-8 col-sm-6">
									<h2 class="box-title mt-0">@Model.Name</h2>
									<div class="list-inline">
										<a class="text-warning"><i class="mdi mdi-star"></i></a>
										<a class="text-warning"><i class="mdi mdi-star"></i></a>
										<a class="text-warning"><i class="mdi mdi-star"></i></a>
										<a class="text-warning"><i class="mdi mdi-star"></i></a>
										<a class="text-warning"><i class="mdi mdi-star"></i></a>
									</div>
									<h1 class="pro-price mb-0 mt-20">
										&#36;@Model.Price
										
									</h1>
									<hr>
									<p>@Model.ShortDescription</p>
								
									<hr>
								
									<h4 class="box-title mt-20">Key Highlights</h4>
									<ul class="list-icons list-unstyled">
										<li><i class="fa fa-check text-danger me-3"></i> @Model.Name</li>
										<li><i class="fa fa-check text-danger me-3"></i> @Model.ShortDescription</li>
									</ul>
								</div>
								<div class="col-lg-12 col-md-12 col-sm-12">
									<h4 class="box-title mt-40">General Info</h4>
									<div class="table-responsive">
										<table class="table">
											<tbody>
												<tr>
													<td width="390">Brand</td>
													<td> @Model.Brand.Name </td>
												</tr>
												<tr>
													<td>Category</td>
													<td> @foreach (var item in Model.CategoryProducts)
														 {
															 @item.Category.Name
														 } </td>
												</tr>
												<tr>
													<td>Color</td>
													<td> @foreach (var item in Model.ProductColors)
														 {
															 @item.Color.Name
														 } </td>
												</tr>
												

											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

		</section>
		<!-- /.content -->
	</div>
</div>
<!-- /.content-wrapper -->